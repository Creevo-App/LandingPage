rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to create documents and read for duplicate checking in the waitlist_emails collection
    match /waitlist_emails/{document} {
      allow create: if true;
      allow read: if true; // Allow reading to check for duplicate emails
      allow update, delete: if false; // Prevent updates and deletes
    }
    
    // Deny access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
